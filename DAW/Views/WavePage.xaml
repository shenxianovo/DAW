<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DAW.Views.WavePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DAW.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:models="using:DAW.Wave.Models"
    xmlns:controls="using:DAW.Controls"
    xmlns:winUi="using:CommunityToolkit.WinUI"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    KeyboardAcceleratorPlacementMode="Hidden"
    NavigationCacheMode="Required">

    <Page.KeyboardAccelerators>
        <KeyboardAccelerator Key="Space">
            <interactivity:Interaction.Behaviors>
                <interactivity:EventTriggerBehavior EventName="Invoked">
                    <interactivity:InvokeCommandAction Command="{x:Bind ViewModel.TogglePlayPauseCommand}"
                                                       CommandParameter="{Binding}"/>
                </interactivity:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </KeyboardAccelerator>
    </Page.KeyboardAccelerators>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>

            <!-- Audio list -->
            <Border Grid.Row="0"
                    BorderThickness="2" BorderBrush="Gray" CornerRadius="10"
                    Margin="0, 0, 2, 2">
                <TabView IsAddTabButtonVisible="False"
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                         TabWidthMode="SizeToContent">
                    <TabViewItem Header="文件" IsClosable="False">
                        <ListView ItemsSource="{x:Bind ViewModel.AudioList, Mode=OneWay}"
                                  SelectedIndex="{x:Bind ViewModel.SelectedAudioIndex, Mode=TwoWay}"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Padding="4">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:AudioFile">
                                    <TextBlock Text="{x:Bind Mode=TwoWay, Path=FileName}"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <interactivity:Interaction.Behaviors>
                                <interactivity:EventTriggerBehavior EventName="DoubleTapped">
                                    <interactivity:InvokeCommandAction Command="{x:Bind ViewModel.OpenFileCommand}" CommandParameter="{Binding}"/>
                                </interactivity:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </ListView>
                    </TabViewItem>
                </TabView>
            </Border>

            <Border Grid.Row="1"
                    BorderThickness="2" BorderBrush="Gray" CornerRadius="10"
                    Margin="0, 2, 2, 0">

                <TabView IsAddTabButtonVisible="False"
                         TabWidthMode="SizeToContent">
                    <TabViewItem Header="属性" IsClosable="False">
                        <TextBlock Padding="10"
                                   Text="{x:Bind ViewModel.CurrentAudioFile.DisplayInfo, Mode=OneWay}"
                                   TextWrapping="Wrap"/>
                    </TabViewItem>
                    <TabViewItem Header="效果" IsClosable="False">
                        <TextBlock Padding="10" Text="效果设置" FontWeight="Bold"/>
                    </TabViewItem>
                </TabView>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 波形预览图 -->
            <controls:WaveViewControl Grid.Row="0"
                                      AudioData="{x:Bind ViewModel.CurrentAudioFile.AudioData, Mode=OneWay}"
                                      Channels="{x:Bind ViewModel.CurrentAudioFile.Channels, Mode=OneWay}"
                                      VisibleLeftSample="{x:Bind ViewModel.CurrentAudioFile.VisibleLeftSampleIndex, Mode=TwoWay}"
                                      VisibleRightSample="{x:Bind ViewModel.CurrentAudioFile.VisibleRightSampleIndex, Mode=TwoWay}"
                                      PlaybackPositionSample="{x:Bind ViewModel.CurrentAudioFile.PlaybackPositionSampleIndex, Mode=OneWay}"
                                      HorizontalAlignment="Stretch"/>


            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Button Command="{x:Bind ViewModel.PlayCommand}">
                    <FontIcon Glyph="&#xE768;"/>
                </Button>
                <Button Command="{x:Bind ViewModel.PauseCommand}">
                    <FontIcon Glyph="&#xE769;"/>
                </Button>
                <Button Command="{x:Bind ViewModel.CloseCommand}">
                    <FontIcon Glyph="&#xE894;"/>
                </Button>
                <StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.CurrentAudioFile.VisibleLeftSampleIndex, Mode=OneWay}"/>
                    <TextBlock Text="{x:Bind ViewModel.CurrentAudioFile.VisibleRightSampleIndex, Mode=OneWay}"/>
                </StackPanel>
            </StackPanel>
        </Grid>

    </Grid>
</Page>
