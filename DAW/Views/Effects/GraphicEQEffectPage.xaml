<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DAW.Views.Effects.GraphicEQEffectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DAW.Views.Effects"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:effects="using:DAW.ViewModels.Effects"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="15, 0, 15, 0">
        <TextBlock Text="Graphic EQ" Margin="0, 5"/>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="300">
            <ItemsControl ItemsSource="{x:Bind ViewModel.Bands, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="20,30,20,0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="effects:EQBand">
                        <StackPanel Width="60">
                            <TextBlock Text="{x:Bind Label}" TextAlignment="Left" Margin="0, 0, 0,10"/>
                            <Slider Height="200" Minimum="-12" Maximum="12" StepFrequency="0.1"
                                Orientation="Vertical"
                                Value="{x:Bind Gain, Mode=TwoWay}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>

</Page>
