<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DAW.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DAW.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:winUi="using:CommunityToolkit.WinUI"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required">

    <ScrollView>
        <StackPanel Spacing="10" Margin="20">
            <TextBlock Text="设置" FontSize="30"/>
            <TextBlock Text="输入与输出"/>
            <controls:SettingsCard Header="音频输入设备"
                               HeaderIcon="{winUi:FontIcon Glyph=&#xE720;}">
                <ComboBox x:Name="InputDeviceComboBox" MinWidth="300"
                      ItemsSource="{x:Bind ViewModel.InputDevices}"
                      SelectedItem="{x:Bind ViewModel.SelectedInputDevice, Mode=TwoWay}">
                    <interactivity:Interaction.Behaviors>
                        <interactivity:EventTriggerBehavior EventName="SelectionChanged">
                            <interactivity:InvokeCommandAction Command="{x:Bind ViewModel.SetInputDeviceCommand}"
                                                           CommandParameter="{x:Bind InputDeviceComboBox.SelectedItem, Mode=OneWay}" />
                        </interactivity:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                </ComboBox>
            </controls:SettingsCard>
            <controls:SettingsCard Header="音频输出设备"
                               HeaderIcon="{winUi:FontIcon Glyph=&#xE7F6;}">
                <ComboBox x:Name="OutputDeviceComboBox" MinWidth="300"
                      ItemsSource="{x:Bind ViewModel.OutputDevices}"
                      SelectedItem="{x:Bind ViewModel.SelectedOutputDevice, Mode=TwoWay}">
                    <interactivity:Interaction.Behaviors>
                        <interactivity:EventTriggerBehavior EventName="SelectionChanged">
                            <interactivity:InvokeCommandAction Command="{x:Bind ViewModel.SetOutputDeviceCommand}"
                                                           CommandParameter="{x:Bind OutputDeviceComboBox.SelectedItem, Mode=OneWay}" />
                        </interactivity:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                </ComboBox>
            </controls:SettingsCard>

            <TextBlock Text="关于"/>
            <controls:SettingsExpander Header="DAW"
                                   Description=" © 2025 shenxianovo. All rights reserved."
                                   HeaderIcon="{winUi:FontIcon Glyph=&#xE8AF;}">
                <controls:SettingsExpander.Items>
                    <controls:SettingsCard>
                        <controls:SettingsCard.Header>
                            <StackPanel>
                                <TextBlock Text="源代码" Margin="12, 0, 0, 0"/>
                                <HyperlinkButton Content="Github repository" NavigateUri="https://github.com/shenxianovo/DAW"/>
                            </StackPanel>
                        </controls:SettingsCard.Header>
                    </controls:SettingsCard>
                    <controls:SettingsCard>
                        <controls:SettingsCard.Header>
                            <StackPanel>
                                <TextBlock Text="依赖项" Margin="12, 0, 0, 0"/>
                                <HyperlinkButton Content="Windows App SDK 1.7" NavigateUri="https://github.com/microsoft/WindowsAppSDK"/>
                                <HyperlinkButton Content="Windows UI Library" NavigateUri="https://github.com/microsoft/microsoft-ui-xaml"/>
                                <HyperlinkButton Content="Windows Community Toolkit" NavigateUri="https://github.com/CommunityToolkit/Windows"/>
                                <HyperlinkButton Content="NAudio" NavigateUri="https://github.com/naudio/NAudio"/>
                                <HyperlinkButton Content="Win2D" NavigateUri="https://github.com/Microsoft/Win2D"/>

                            </StackPanel>
                        </controls:SettingsCard.Header>
                    </controls:SettingsCard>
                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>
        </StackPanel>

    </ScrollView>

</Page>
