<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="DAW.Controls.WaveViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DAW.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <xaml:CanvasControl Grid.Row="0"
                            Height="40"
                            x:Name="PreviewCanvasControl"
                            Draw="CanvasControl_Draw"
                            PointerPressed="OnCanvasPointerPressed"
                            PointerMoved="OnCanvasPointerMoved"
                            PointerReleased="OnCanvasPointerReleased"
                            ClearColor="{StaticResource CanvasClearColor}"/>

        <Rectangle Grid.Row="1" Fill="SkyBlue"/>
        <Rectangle Grid.Row="2" Fill="Azure"/>
    </Grid>
</UserControl>
