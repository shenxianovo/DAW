<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="DAW.Controls.WaveViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DAW.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        
        <xaml:CanvasControl Grid.Row="0"
                            x:Name="PreviewCanvasControl"
                            ClearColor="{StaticResource CanvasClearColor}"
                            Draw="PreviewCanvasControl_Draw"
                            PointerPressed="OnPreviewCanvasPointerPressed"
                            PointerMoved="OnPreviewCanvasPointerMoved"
                            PointerReleased="OnPreviewCanvasPointerReleased"/>

        <xaml:CanvasControl Grid.Row="1"
                            x:Name="EditorCanvasControl"
                            ClearColor="{StaticResource CanvasClearColor}"
                            Draw="EditorCanvasControl_Draw"
                            PointerPressed="OnEditorCanvasPointerPressed"
                            PointerMoved="OnEditorCanvasPointerMoved"
                            PointerReleased="OnEditorCanvasPointerReleased"/>
        <!--
        <xaml:CanvasControl Grid.Row="2"
                            x:Name="MelSpectrogramCanvasControl"
                            ClearColor="{StaticResource CanvasClearColor}"
                            Draw="MelSpectrogramCanvasControl_Draw"/>
        -->
    </Grid>
</UserControl>
